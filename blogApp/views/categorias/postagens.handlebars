<h4>{{categoria.nome}}</h4>
{{#each postagens}}
  <div class="card mt-4">
    <div class="card-body">
      <h5>{{titulo}}</h5>
      <p>{{descricao}}</p>
      <a href="/postagem/{{slug}}">
        <button type="button" class="btn btn-success">Leia mais...</button>
      </a>
      <hr>
      <small>{{categoria.nome}}</small>
      <small>{{data}}</small>
    </div>
  </div>
{{else}}
  <h5>Nenhuma postagem!</h5>
{{/each}}
