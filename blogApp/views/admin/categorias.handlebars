<h2>Lista de categorias</h2>
<hr>
<a href="/admin/categorias/add">
  <button class="btn btn-success">Nova Categoria</button>
</a>

{{#each categorias}}
  <div class="card">
    <div class="card-body">
      <h6>{{nome}}</h6>
      <small>Slug: {{slug}}</small>
      <br>
      <a href="/admin/categorias/edit/{{_id}}">
        <button type="button" name="button" class="btn btn-success mt-2">Editar</button>
      </a>
      <a href="/admin/categorias/del/{{_id}}">
        <button type="button" name="button" class="btn btn-danger mt-2">Excluir</button>
      </a>
    </div>
  </div>
{{else}}
  <h4 class="mt-4">NÃ£o existem categorias cadastradas</h4>
{{/each}}
