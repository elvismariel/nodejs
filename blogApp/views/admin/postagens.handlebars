<h2>Lista de Postagens</h2>
<hr>
<a href="/admin/postagens/add">
  <button class="btn btn-success">Nova Postagem</button>
</a>

{{#each postagens}}
  <div class="card mt-4">
    <div class="card-body">
      <h4>{{titulo}}</h4>
      <p>Descrição: {{descricao}}</p>
      <small>Data: {{data}}</small>
      <small>Categoria: {{categoria.nome}}</small>
      <br>
      <a href="/admin/postagens/edit/{{_id}}">
        <button type="button" name="button" class="btn btn-success mt-2">Editar</button>
      </a>
      <a href="/admin/postagens/del/{{_id}}">
        <button type="button" name="button" class="btn btn-danger mt-2">Excluir</button>
      </a>
    </div>
  </div>
{{else}}
  <h4 class="mt-4">Não existem postagens cadastradas</h4>
{{/each}}
